<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    <!-- Diverse vehicle types with varying speed characteristics -->
    <vType id="car_slow" accel="2.0" decel="4.0" sigma="0.8" length="4.5" minGap="2.5" maxSpeed="27.78" speedFactor="0.85" speedDev="0.15" vClass="passenger" color="1,0,0"/>
    <vType id="car_medium" accel="2.6" decel="4.5" sigma="0.7" length="4.5" minGap="2.5" maxSpeed="30.56" speedFactor="0.95" speedDev="0.15" vClass="passenger" color="1,0.5,0"/>
    <vType id="car_fast" accel="3.0" decel="5.0" sigma="0.6" length="4.5" minGap="2.0" maxSpeed="33.33" speedFactor="1.05" speedDev="0.15" vClass="passenger" color="1,1,0"/>
    <vType id="truck_slow" accel="1.0" decel="3.5" sigma="0.7" length="12.0" minGap="3.0" maxSpeed="25.00" speedFactor="0.80" speedDev="0.10" vClass="truck" color="0,1,0"/>
    <vType id="truck_normal" accel="1.3" decel="4.0" sigma="0.6" length="12.0" minGap="3.0" maxSpeed="27.78" speedFactor="0.90" speedDev="0.10" vClass="truck" color="0,0.7,0"/>

    <!-- 동쪽 방향 route (highway) -->
    <route id="route_east" edges="highway"/>

    <!-- 서쪽 방향 route (-highway는 highway의 반대 방향) -->
    <route id="route_west" edges="-highway"/>

    <!-- ========================================
         차량 Flow (양방향)
         총 차량 밀도: ~3024 veh/hr (양방향 합산)
         편도당: ~1512 veh/hr = 0.42 veh/sec
         ======================================== -->
    <!-- 시작 시간 순서대로 정렬 -->
    <flow id="flow_east_slow" type="car_slow" route="route_east" begin="0.0" end="3600" vehsPerHour="420" departLane="best" departSpeed="random"/>
    <flow id="flow_west_slow" type="car_slow" route="route_west" begin="0.5" end="3600" vehsPerHour="420" departLane="best" departSpeed="random"/>
    <flow id="flow_east_medium" type="car_medium" route="route_east" begin="1.0" end="3600" vehsPerHour="420" departLane="best" departSpeed="avg"/>
    <flow id="flow_west_medium" type="car_medium" route="route_west" begin="1.5" end="3600" vehsPerHour="420" departLane="best" departSpeed="avg"/>
    <flow id="flow_east_fast" type="car_fast" route="route_east" begin="2.0" end="3600" vehsPerHour="420" departLane="best" departSpeed="random"/>
    <flow id="flow_west_fast" type="car_fast" route="route_west" begin="2.5" end="3600" vehsPerHour="420" departLane="best" departSpeed="random"/>
    <flow id="flow_east_truck_slow" type="truck_slow" route="route_east" begin="3.0" end="3600" vehsPerHour="63" departLane="0" departSpeed="avg"/>
    <flow id="flow_west_truck_slow" type="truck_slow" route="route_west" begin="3.5" end="3600" vehsPerHour="63" departLane="0" departSpeed="avg"/>
    <flow id="flow_east_truck_normal" type="truck_normal" route="route_east" begin="4.0" end="3600" vehsPerHour="63" departLane="0" departSpeed="random"/>
    <flow id="flow_west_truck_normal" type="truck_normal" route="route_west" begin="4.5" end="3600" vehsPerHour="63" departLane="0" departSpeed="random"/>
</routes>
