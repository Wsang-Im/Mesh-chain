<!-- 3km 고속도로 - 현실적인 곡선 및 인터체인지 설계 (학술 논문 수준) -->
<edges>
    <!-- 메인 고속도로 eastbound (3차선, 120 km/h) -->
    <!-- 완만한 S-curve 형태 -->
    <edge id="highway_seg1a" from="west" to="curve1" priority="13" numLanes="3" speed="33.33"
          spreadType="center" shape="0.0,0.0 300.0,8.0 600.0,15.0"/>
    <edge id="highway_seg1b" from="curve1" to="junction1" priority="13" numLanes="3" speed="33.33"
          spreadType="center" shape="600.0,15.0 1050.0,28.0 1500.0,35.0"/>
    <edge id="highway_seg2" from="junction1" to="curve2" priority="13" numLanes="3" speed="33.33"
          spreadType="center" shape="1500.0,35.0 1800.0,30.0 2100.0,20.0"/>
    <edge id="highway_seg3" from="curve2" to="east" priority="13" numLanes="3" speed="33.33"
          spreadType="center" shape="2100.0,20.0 2550.0,10.0 3000.0,0.0"/>

    <!-- 메인 고속도로 westbound (역방향, 3차선) -->
    <edge id="-highway_seg3" from="east" to="curve2" priority="13" numLanes="3" speed="33.33"
          spreadType="center" shape="3000.0,0.0 2550.0,10.0 2100.0,20.0"/>
    <edge id="-highway_seg2" from="curve2" to="junction1" priority="13" numLanes="3" speed="33.33"
          spreadType="center" shape="2100.0,20.0 1800.0,30.0 1500.0,35.0"/>
    <edge id="-highway_seg1b" from="junction1" to="curve1" priority="13" numLanes="3" speed="33.33"
          spreadType="center" shape="1500.0,35.0 1050.0,28.0 600.0,15.0"/>
    <edge id="-highway_seg1a" from="curve1" to="west" priority="13" numLanes="3" speed="33.33"
          spreadType="center" shape="600.0,15.0 300.0,8.0 0.0,0.0"/>

    <!-- 진입 램프 시스템 (Diamond Interchange @ 1.5km) -->
    <!-- 가속차로 포함, 80 km/h = 22.22 m/s -->
    <edge id="ramp1_approach" from="ramp1_start" to="ramp1_merge_prep" priority="9" numLanes="1" speed="22.22"
          shape="1400.0,-180.0 1425.0,-150.0 1450.0,-120.0"/>
    <edge id="ramp1_accel" from="ramp1_merge_prep" to="ramp1_accel_start" priority="9" numLanes="1" speed="25.00"
          shape="1450.0,-120.0 1465.0,-90.0 1480.0,-60.0"/>
    <edge id="ramp1_on" from="ramp1_accel_start" to="junction1" priority="9" numLanes="1" speed="27.78"
          shape="1480.0,-60.0 1490.0,-30.0 1500.0,35.0"/>
</edges>
